<UserControl x:Class="Client.Views.File.FileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Client.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:SizeConverter x:Key="SizeConverter"/>
    </UserControl.Resources>


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Кнопки -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Хлебные крошки -->
            <RowDefinition Height="*"/>
            <!-- 2: Файлы -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Drag&Drop область для корня -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Заголовок папок -->
            <RowDefinition Height="Auto"/>
            <!-- 5: Папки -->
        </Grid.RowDefinitions>

        <!-- Кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Назад" Command="{Binding GoBackCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Загрузить файл" Command="{Binding UploadCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="Создать папку" Command="{Binding CreateFolderCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="Профиль" Command="{Binding OpenProfileCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Выйти" Command="{Binding LogoutCommand}" Width="80"/>
        </StackPanel>

        <!-- Хлебные крошки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <ItemsControl ItemsSource="{Binding Breadcrumbs}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="/" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,3,0"/>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.NavigateToBreadcrumbCommand, 
                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Foreground="Blue"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Padding="2,0"
                                    Margin="0,0,3,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Файлы -->
        <ListBox Grid.Row="2" 
                 ItemsSource="{Binding Files}" 
                 Background="White" 
                 BorderBrush="Gray" 
                 BorderThickness="1" 
                 Padding="5"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Border для файла с обработчиком перетаскивания -->
                    <Border Background="White" 
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="5"
                            Margin="2"
                            Cursor="Hand"
                            MouseLeftButtonDown="FileItem_MouseLeftButtonDown">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="14" Width="400" />
                            <TextBlock Text="  •  " Foreground="Gray"/>
                            <TextBlock Text="{Binding Size, StringFormat='{}{0:N0} байт'}" Foreground="Gray" Width="100"/>
                            <TextBlock Text="  •  " Foreground="Gray"/>
                            <TextBlock Text="{Binding UploadedAt, StringFormat='dd.MM.yyyy HH:mm'}" Foreground="Gray" Width="150"/>
                            <Button Content="Скачать" Command="{Binding DownloadCommand}" Margin="10,0,5,0"/>
                            <Button Content="Удалить" Command="{Binding DeleteCommand}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Drag&Drop область для корня -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="Gray" 
                BorderThickness="1"
                Margin="0,5,0,10"
                AllowDrop="True"
                DragEnter="RootArea_DragEnter"
                DragLeave="RootArea_DragLeave"
                Drop="RootArea_Drop">
            <TextBlock Text="Перетащите файлы сюда, чтобы переместить в корень" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       FontStyle="Italic"
                       Margin="10"/>
        </Border>

        <!-- Заголовок папок -->
        <TextBlock Grid.Row="4" Text="Мои папки:" FontWeight="Bold" Margin="0,0,0,5"/>

        <!-- Папки -->
        <ListBox Grid.Row="5" 
                 ItemsSource="{Binding Folders}" 
                 Background="White" 
                 BorderBrush="LightBlue" 
                 BorderThickness="1" 
                 Padding="5"
                 MaxHeight="150"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Border для папки с обработчиками Drag&Drop -->
                    <Border Background="LightCyan" 
                            BorderBrush="LightBlue" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            Padding="8,5"
                            Margin="2"
                            MouseLeftButtonDown="FolderItem_MouseLeftButtonDown"
                            AllowDrop="True"
                            DragEnter="FolderItem_DragEnter"
                            DragLeave="FolderItem_DragLeave"
                            Drop="FolderItem_Drop">

                        <!-- Контекстное меню для папки -->
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Переименовать" 
                                          Click="OnRenameFolderClick"
                                          Tag="{Binding}"/>
                                <Separator/>
                                <MenuItem Header="Удалить" 
                                          Click="OnDeleteFolderClick"
                                          Tag="{Binding}"
                                          Foreground="Red"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <!-- ToolTip с информацией о папке -->
                        <Border.ToolTip>
                            <StackPanel Margin="5" Width="200">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           TextWrapping="Wrap"/>
                                <Separator Margin="0,3,0,3"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="Тип:" 
                                               Foreground="Gray" 
                                               Margin="0,0,5,3"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="Папка" 
                                               FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="Создана:" 
                                               Foreground="Gray" 
                                               Margin="0,0,5,3"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="{Binding CreatedAt, StringFormat='dd.MM.yyyy HH:mm'}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                               Text="Размер:" 
                                               Foreground="Gray" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" 
                                               Text="{Binding Size, Converter={StaticResource SizeConverter}}"/>
                                </Grid>
                            </StackPanel>
                        </Border.ToolTip>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁 " FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="300"/>
                            <TextBlock Text=" (папка)" 
                                       Foreground="Gray" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>