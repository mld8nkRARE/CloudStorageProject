<UserControl x:Class="Client.Views.File.FileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F0F2F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Загрузить файл" Command="{Binding UploadCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="Профиль" Command="{Binding OpenProfileCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Выйти" Command="{Binding LogoutCommand}" Width="80"/>
        </StackPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding Files}" DisplayMemberPath="Name" 
                 Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5"/>
    </Grid>
</UserControl>

