<Window x:Class="Client.Views.Dialogs.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" 
        Width="400" 
        Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Width" Value="300"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Смена пароля" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Текущий пароль -->
            <TextBlock Text="Текущий пароль:"/>
            <PasswordBox x:Name="CurrentPasswordBox"/>

            <!-- Новый пароль -->
            <TextBlock Text="Новый пароль:"/>
            <PasswordBox x:Name="NewPasswordBox"/>

            <!-- Подтверждение -->
            <TextBlock Text="Подтвердите пароль:"/>
            <PasswordBox x:Name="ConfirmPasswordBox"/>

            <!-- Ошибка -->
            <TextBlock x:Name="ErrorText" 
                       Foreground="Red" 
                       Visibility="Collapsed"
                       TextWrapping="Wrap"
                       Margin="0,10,0,20"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button Content="Отмена" 
                        Width="100" 
                        Height="30"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"
                        IsCancel="True"/>

                <Button Content="Сменить" 
                        Width="100" 
                        Height="30"
                        Click="OkButton_Click"
                        IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
