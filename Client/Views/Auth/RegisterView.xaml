<UserControl x:Class="Client.Views.Auth.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F0F2F5">
    <Grid>
        <Border Width="350" Padding="20" Background="White" CornerRadius="10"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock><Run Language="ru-ru" Text="Имя"/></TextBlock>
                <TextBox Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}" Width="300" Margin="0,5"/>

                <TextBlock Text="Email:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="300" Margin="0,5"/>

                <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
                <PasswordBox Width="300" Margin="0,5" PasswordChanged="PasswordBox_PasswordChanged"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Зарегистрироваться" Command="{Binding RegisterCommand}" Width="150" Margin="0,0,10,0"/>
                    <Button Content="Назад" Command="{Binding BackToLoginCommand}" Width="100"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

